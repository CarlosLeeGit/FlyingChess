<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/chessBoard"
    tools:context=".activity.ChessBoardActivity"
    android:background="@drawable/sky_color">

    <Button
        android:id="@+id/pause"
        android:background="@drawable/pause"
        android:layout_width="36sp"
        android:layout_height="36sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2sp"
        android:layout_marginRight="5sp" />

    <Button
        android:id="@+id/G1"
        android:background="@drawable/g1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/G2"
        android:background="@drawable/g1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/G3"
        android:background="@drawable/g1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/G4"
        android:background="@drawable/g1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/B1"
        android:background="@drawable/b1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/B2"
        android:background="@drawable/b1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/B3"
        android:background="@drawable/b1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/B4"
        android:background="@drawable/b1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/Y1"
        android:background="@drawable/y1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/Y2"
        android:background="@drawable/y1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/Y3"
        android:background="@drawable/y1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/Y4"
        android:background="@drawable/y1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/R1"
        android:background="@drawable/r1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/R2"
        android:background="@drawable/r1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/R3"
        android:background="@drawable/r1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/R4"
        android:background="@drawable/r1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/map"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="false"
        android:adjustViewBounds="true"
        android:textAlignment="viewStart" />

    <include
        android:id="@+id/include"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        layout="@layout/content_board_player_list"
        android:layout_toEndOf="@+id/map"
        android:layout_below="@+id/pause"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="10sp"
        android:layout_toRightOf="@+id/map"
        android:layout_above="@+id/dice" />

    <Button
        android:id="@+id/dice"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="7sp" />

</RelativeLayout>
